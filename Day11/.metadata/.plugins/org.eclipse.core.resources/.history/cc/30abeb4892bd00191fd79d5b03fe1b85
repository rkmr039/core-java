<!DOCTYPE html>
<html>
<head>
<script>
	function sum() {
		var a = parseInt(frmCalc.txtFirstName.value);
		var b = parseInt(frmCalc.txtSecondName.value);
		var res = a + b;
		frmCalc.txtResult.value = res;
	}
	function sub() {
		var a = parseInt(frmCalc.txtFirstName.value);
		var b = parseInt(frmCalc.txtSecondName.value);
		var res = a - b;
		frmCalc.txtResult.value = res;
	}
	function mul() {
		var a = parseInt(frmCalc.txtFirstNum.value);
		var b = parseInt(frmCalc.txtSecondNum.value);
		var res = a * b;
		frmCalc.txtResult.value = res;
	}
</script>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
	<form name="frmCalc">
		<center>
			<table border="3">
				<tr>
					<th colspan="2">
						Calculator Form
					</th>
				</tr>
				<tr>
					<th>First Num</th>
					<td>
						<input type="text" name="txtFirstNum" />
					</td>	
				</tr>
				<tr>
					<th>Second Num</th>
					<td>
						<input type="text" name="txtSecondNum" />
					</td>	
				</tr>
				<tr>
					<th>Result</th>
					<td>
						<input type="text" name="txtResult" />				
					</td>
				</tr>	
				<tr>
					<th colspan="2">
						<input type="button" value="Sum" onclick="sum()"/>	
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<input type="button" value="Sub" onclick="sub()"/>	
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<input type="button" value="Mul" onclick="mul()"/>	
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					</th>
				</tr>	
			</table>
		</center>
	</form>
</body>
</html>