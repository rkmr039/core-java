	function chkLogin() {
		var user,pwd;
		user = frmData.txtUserName.value;
		pwd = frmData.txtpassWord.value;
		if(user == "HCL" && pwd =="HCL") {
			window.open("http://www.google.com");
		} else {
			document.getElementById("err1").innerHTML = "Invalid Credentials";
		}
	}
</script>
